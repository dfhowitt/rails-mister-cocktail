<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to 'Home', cocktails_path %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Add a cocktail', new_cocktail_path(@cocktail) %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
<h1>Cocktails</h1>
  <div class='card-product'>
    <% @cocktails.each do |cocktail| %>
      <div class="card-product-infos">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        <p>Product description with <strong>relevant info</strong> only.</p>

        <div class="icons">
        <%= link_to edit_cocktail_path(cocktail) do %>
        <i class="fas fa-edit"></i>
        <% end %>

        <%= link_to cocktail_path(cocktail), method: :delete, data:
          { confirm: 'Are you certain you want to delete this?' } do %>
          <i class="fas fa-trash"></i>
          <% end %>
      </div>
      </div>
    <% end %>
  </div>
</div>

